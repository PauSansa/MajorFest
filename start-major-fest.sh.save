#!/bin/zsh

# Script para iniciar el backend y el frontend de Major Fest

# Ruta al directorio del backend
backend_dir="major-fest-api"

# Ruta al directorio del frontend
frontend_dir="major-fest-client"

# Función para iniciar el backend
start_backend() {
  echo "Iniciando el backend..."
  cd "$backend_dir"
  ./gradlew bootRun
}

# Función para iniciar el frontend
start_frontend() {
  echo "Iniciando el frontend..."
  cd "$frontend_dir"
  npm start
}

# Llamada a las funciones de inicio
start_backend &
start_frontend &

# Esperar a que ambos procesos terminen
wait

